{
  "Routes": [
    {
      "UpstreamPathTemplate": "/gateway/users/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/users/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "userservice-app", // aynı environment içinde DNS ismi
          "Port": 80
        }
      ],
      "DownstreamHeaderTransform": { "Accept-Language": "{Accept-Language}" }
    },
    {
      "UpstreamPathTemplate": "/gateway/products/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/products/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice-app",
          "Port": 80
        }
      ],
      "DownstreamHeaderTransform": { "Accept-Language": "{Accept-Language}" }
    },
    {
      "UpstreamPathTemplate": "/gateway/orders/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/orders/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "orderservice-app",
          "Port": 80
        }
      ],
      "DownstreamHeaderTransform": { "Accept-Language": "{Accept-Language}" }
    }
  ],
  "GlobalConfiguration": {
    "RequestIdKey": "OcRequestId",
    "BaseUrl": "http://apigateway-app" // API Gateway container DNS adı
  }
}
